@model Infobase.Models.PASS.Measure
@{
    Layout = "_Layout.cshtml";
}


<table class="table table-striped table-hover table-condensed table-bordered">
<tbody><tr><td><strong>Name</strong></td>
<td>@Model.MeasureName.Get(("EN", null))</td></tr>
<tr><td><strong>Definition</strong></td>
    <td>@Model.MeasureDefinition.Get(("EN", null))</td></tr>
<tr><td><strong>Data Source</strong></td>
    <td>@Model.MeasureSource.Get(("EN", null))</td></tr>
<tr><td><strong>Population</strong></td>
    <td>@Model.MeasurePopulation.Get(("EN", null))</td></tr>
<tr><td><strong>Methods Calculation</strong></td><td>
    @Model.MeasureMethod.Get(("EN", null))
</td></tr>
<tr><td><strong>Additional Notes</strong></td><td>
    @Model.MeasureAdditionalRemarks.Get(("EN", null))
</td></tr>
</tbody></table>
<a asp-action="@RouteLocalizer.ReverseLookup(ViewContext.RouteData.Values["culture"].ToString(), "datatool")" asp-route-measureid="@Model.MeasureId" class="btn btn-default">Open in Datatool</a>